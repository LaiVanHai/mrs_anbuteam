<% provide :name, @genre.name %>
<div class="container-fluid header-block">
  <h2><%= t "genres.show.genre" %> </h2>
  <h1 class="text-capitalize"><%= @genre.name %></h1>
</div>

<ul class="nav nav-tabs">
  <li class="genre-movie active">
    <a data-toggle="tab" href="#genre-movie"><%= t "pages.movie" %></a></li>
  <li class="genre-actor">
    <a data-toggle="tab" href="#genre-actor"><%= t "pages.actor" %></a></li>
</ul>

<div class="tab-content genre-content">
  <%= render "genres/genre_movie", genres: @genres, movies: @movies %>
</div>
